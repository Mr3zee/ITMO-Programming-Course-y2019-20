<keymap version="1" name="Main copy" parent="$default">
  <action id="CloseProject">
    <keyboard-shortcut first-keystroke="ctrl caps_lock" />
  </action>
  <action id="NewClass">
    <keyboard-shortcut first-keystroke="shift ctrl comma" />
  </action>
  <action id="NewDir">
    <keyboard-shortcut first-keystroke="ctrl alt comma" />
  </action>
  <action id="OpenFile">
    <keyboard-shortcut first-keystroke="shift ctrl o" />
  </action>
  <action id="ShowSettings">
    <keyboard-shortcut first-keystroke="ctrl alt slash" />
  </action>
</keymap>